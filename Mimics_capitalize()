# Nunyie
# Mimics the capitilize() function without using it

def custom_capitalize(input_string):
    if not input_string:  # Check if the string is empty
        return input_string
    
    # Capitalize the first letter and make the rest lowercase
    first_letter = input_string[0].upper()  # Capitalize the first letter
    rest_of_string = input_string[1:].lower()  # Convert the rest to lowercase
    
    return first_letter + rest_of_string  # Combine both parts

user_input = input("Enter a string: ")
result = custom_capitalize(user_input)
print("Capitalized string:", result)